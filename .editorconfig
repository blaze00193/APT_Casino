root = true

[*.rs]
indent_style=tab
indent_size=tab
tab_width=4
end_of_line=lf
charset=utf-8
trim_trailing_whitespace=true
insert_final_newline=true

[*.md]
indent_style=space
indent_size=2

[*.toml]
indent_style=tab
indent_size=tab
tab_width=4

[*.yml]
indent_style=space
indent_size=2
tab_width=8
end_of_line=lf

[*.sh]
indent_style=space
indent_size=2
tab_width=8
end_of_line=lf

[*.json]
indent_style=space
indent_size=2

[*.ts]
indent_style=space
indent_size=2
